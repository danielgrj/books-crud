<form action="/edit-book?bookid={{book._id}}" method="post">
  <label for="title">Title</label>
  <input type="text" name="title" id="title" value="{{book.title}}">
  <label for="description">Description</label>
  <input type="text" name="description" id="description" value="{{book.description}}">
  <label for="author">Author</label>
  <input type="text" name="author" id="author" value="{{book.author}}">
  <label for="raiting">Raiting</label>
  <input type="number" name="raiting" id="raiting" value="{{book.raiting}}">
  <input type="submit" value="Edit">
</form>